{
  "name": "Pebidi from Chrome",
  "description": "Translate evryword in one click",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "version": "0.7",
  "permissions": ["contextMenus",
        "tabs",
        "notifications",
        "http://*/",
        "https://*/"],
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content_script.js"]
  }],
  "background": {
    "persistent": false,
    "scripts": ["angular.min.js", "sample.js"]
  },
  "manifest_version": 2
}
